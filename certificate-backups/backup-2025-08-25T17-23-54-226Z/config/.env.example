# VPN Server Authentication Configuration
# Copy this file to .env and configure your settings

# Admin Credentials (use npm run setup-auth to generate these)
VPN_USERNAME=admin
VPN_PASSWORD_HASH=your_bcrypt_hash_here

# JWT Configuration (use npm run setup-auth to generate secure secrets)
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Security Settings
ENFORCE_IP_VALIDATION=false
MAX_FAILED_ATTEMPTS=5
LOCKOUT_DURATION=900000

# Server Configuration
PORT=3000
NODE_ENV=production

# VPN Network Configuration
VPN_SUBNET=10.8.0.0
VPN_NETMASK=255.255.255.0
VPN_HOST=your-server-ip
VPN_CONFIG_DIR=/etc/openvpn
VPN_CERT_DIR=/etc/openvpn/certificates

# Logging Configuration
LOGGER=1                    # Set to 0 to disable all logging
LOG_DIR=./logs
LOG_LEVEL=info

# Health Monitoring Configuration
HEALTH_CHECK_INTERVAL=60000

# Web Interface Security Configuration
WEB_PORT=3000
WEB_SESSION_SECRET=your_session_secret_here_64_chars_minimum
WEB_SESSION_TIMEOUT=1800000  # 30 minutes in milliseconds
WEB_HTTPS_ONLY=true          # Enforce HTTPS in production
WEB_ADMIN_USERNAME=admin
WEB_ADMIN_PASSWORD_HASH=your_bcrypt_hash_here

# Rate Limiting Configuration
WEB_RATE_LIMIT_ENABLED=true