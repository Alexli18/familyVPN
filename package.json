{
  "name": "family-vpn-server",
  "version": "1.0.0",
  "description": "Private VPN server for family usage",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "NODE_ENV=development nodemon src/server.js",
    "setup": "node scripts/setup.js",
    "setup-auth": "node scripts/setup-auth.js",
    "setup-secrets": "node scripts/setup-secrets.js",
    "setup-web-admin": "node scripts/setup-web-admin.js",
    "clean": "node scripts/clean.js",
    "generate-client": "node scripts/generate-client.js",
    "bundle-client": "node scripts/bundle-client.js",
    "test-easyrsa": "node scripts/test-easyrsa.js",
    "init-pki": "node scripts/initialize-pki.js",
    "fix-server-cert": "node scripts/sign-server-cert.js",
    "harden-config": "node scripts/harden-config.js",
    "security-scan": "node scripts/security-scan.js",
    "network-security": "node scripts/network-security.js",
    "firewall:init": "node scripts/network-security.js init",
    "firewall:status": "node scripts/network-security.js status",
    "firewall:cleanup": "node scripts/network-security.js cleanup",
    "dns:test": "node scripts/network-security.js test-dns",
    "docker:build": "docker build -t family-vpn-server .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "test": "npm run test:web-auth && npm run test:cert-manager && npm run test:hardened-config && npm run test:docker-security && npm run test:network-security && npm run test:comprehensive && npm run test:web-foundation && npm run test:session-middleware && npm run test:filesystem-helper && npm run test:certificate-routes && npm run test:certificate-frontend",
    "test:security": "node test/test-security-features.js",
    "test:no-logging": "node test/test-no-logging.js",
    "test:cert-manager": "node test/test-enhanced-certificate-manager.js",
    "test:hardened-config": "node test/test-hardened-config.js",
    "test:docker-security": "node test/test-docker-security.js",
    "test:network-security": "node test/test-network-security.js",
    "test:comprehensive": "node test/test-comprehensive-validation.js",
    "test:vpn-connectivity": "node test/test-vpn-connectivity.js",
    "backup:create": "node scripts/backup-certificates.js create",
    "backup:restore": "node scripts/backup-certificates.js restore",
    "backup:verify": "node scripts/backup-certificates.js verify",
    "backup:list": "node scripts/backup-certificates.js list",
    "test:web-auth": "node test/test-web-auth.js",
    "test:web-foundation": "node test/test-web-foundation.js",
    "test:session-middleware": "node test/test-session-middleware.js",

    "test:filesystem-helper": "node test/test-filesystem-helper.js",

    "test:certificate-routes": "node test/test-certificate-routes-unit.js && node test/test-certificate-routes.js",
    "test:certificate-routes-unit": "node test/test-certificate-routes-unit.js",
    "test:certificate-routes-integration": "node test/test-certificate-routes.js",
    "test:certificate-frontend": "node test/test-certificate-frontend.js",
    "prod:deploy": "./scripts/deploy-production.sh",
    "prod:monitor": "./scripts/monitor-production.sh",
    "prod:backup": "./scripts/backup-production.sh",
    "prod:ssl-renew": "./scripts/renew-ssl.sh",
    "prod:up": "docker-compose -f docker-compose.prod.yml up -d",
    "prod:down": "docker-compose -f docker-compose.prod.yml down",
    "prod:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "prod:restart": "docker-compose -f docker-compose.prod.yml restart",
    "prod:build": "docker-compose -f docker-compose.prod.yml build --no-cache",
    "validate:docs": "node scripts/validate-documentation.js",
    "test:workflows": "node scripts/test-user-workflows.js",
    "fix:docs": "node scripts/fix-documentation-links.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cross-spawn": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "express-slow-down": "^2.0.1",
    "fs-extra": "^10.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mkdirp": "^1.0.4",
    "rimraf": "^3.0.2",
    "which": "^2.0.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ]
}